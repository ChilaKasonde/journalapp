<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.exception.journalapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".AddEntry"
            android:label="@string/title_activity_add_entry" >
        </activity>
        <activity
            android:name=".DetailView"
            android:label="@string/title_activity_detail_view" >
        </activity>
        <activity
            android:name=".EditEntry"
            android:label="@string/title_activity_edit_entry" >
        </activity>
    </application>

</manifest>
